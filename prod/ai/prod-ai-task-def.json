{
    "family": "chatbot-prod-ai-task",
    "executionRoleArn": "arn:aws:iam::855738538544:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "2048",
    "memory": "8192",
    "containerDefinitions": [
        {
            "name": "chatbot-prod-ai",
            "image": "<IMAGE_URI>",
            "essential": true,
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "secrets": [
                {
                    "name": "MONGODB_URI",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:855738538544:parameter/chatbot/MONGODB_URI"
                },
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:855738538544:parameter/chatbot/OPENAI_API_KEY"
                },
                {
                    "name": "PINECONE_API_KEY",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:855738538544:parameter/chatbot/PINECONE_API_KEY"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/chatbot-prod-ai-task",
                    "awslogs-region": "ap-northeast-2",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            }
        }
    ]
}
